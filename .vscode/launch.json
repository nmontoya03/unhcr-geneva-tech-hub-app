{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // https://github.com/microsoft/vscode-recipes/tree/main/vuejs-cli
    {
      "name": "frontend: run chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "preLaunchTask": "frontend"
    },
    {
      "name": "frontend: run firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/frontend/src",
      "pathMappings": [
        {
          "url": "webpack://unhcr-geneva-tech-hub-app/src/",
          "path": "${webRoot}/"
        }
      ],
      "preLaunchTask": "frontend"
    },
    {
      "name": "backend: run",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["unhcr_tss.main:app", "--reload"],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
