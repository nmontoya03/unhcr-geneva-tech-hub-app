{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve-frontend",
      "type": "npm",
      "script": "serve",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting development server",
            "endsPattern": "App running at:"
          }
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "frontend"
      }
    },
    {
      "label": "run-couchdb",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "services": ["couchdb"]
        },
        "files": ["${workspaceFolder}/docker-compose.yml"]
      }
    },
    {
      "label": "frontend",
      "dependsOn": ["serve-frontend", "run-couchdb"]
    }
  ]
}
